# TEST 19:

dict set commands test19_mc cmd [subst "$binpaths(dve2lts-mc) --strategy=cndfs \
	--por --check --proviso=cndfs \
	-s22 $EXAMPLES_PATH/elevator.3.dve --ltl=$EXAMPLES_PATH/elevator.3.ltl --threads=2"]
