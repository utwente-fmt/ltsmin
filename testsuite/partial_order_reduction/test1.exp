dict set commands test18_color cmd "$binpaths(dve2lts-seq) --por --check --strategy=scc \
	--proviso=color \
	$EXAMPLES_PATH/iprotocol.2.dve --ltl=$EXAMPLES_PATH/iprotocol.2.ltl"
